\DeclareNameAlias{sortname}{last-first}
\DeclareNameAlias{editorin}{last-first}
%
\newbibmacro*{byeditor:in}{%
	\ifnameundef{editor}
	{}
	{\printnames[editorin]{editor}%
		\addspace\bibsentence%
		\mkbibparens{\usebibmacro{editorstrg}}%
		\clearname{editor}%
		\printunit{\addcolon\space}%
	}%
}
